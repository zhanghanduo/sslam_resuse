<launch>
    <arg name="nodelet_manager_name"  default="ugv_nodelet_manager" />
<!--    <arg name="config_path"           default="$(find sslam_estimator)/config/bus2/stereo_config.yaml"/>-->
    <!--<param name="use_sim_time" value="true" />-->

    <!-- Nodelet manager -->
    <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager_name)"  args="manager" output="screen"/>

    <include file="$(find undistort_images)/launch/bus.launch" />

    <node pkg="tf" type="static_transform_publisher" name="broad_body_to_cam" args="8.73 0 -1.206
    0.497991, -0.502001, 0.502001, -0.497991 body camera 100" />

    <node pkg="nodelet" type="nodelet" name="sslam_estimator" args="load sslam_estimator/sslam_nodelet
    $(arg nodelet_manager_name)" output="screen">
<!--        <param name="config_path"     value="$(arg config_path)" />-->
    </node>

<!--    <node pkg="nodelet" type="nodelet" name="post_estimator" args="load pose_graph/post_estimator-->
<!--    $(arg nodelet_manager_name)" output="screen">-->
    <node pkg="pose_graph" type="pose_graph_node" name="pose_graph_node" output="screen" >
<!--        <param name="config_path"     value="$(arg config_path)" />-->
        <param name="vio_odometry"    value="/sslam_estimator/camera_pose" />
        <param name="keyframe_pose"   value="/sslam_estimator/keyframe_pose" />
        <param name="keyframe_point"  value="/sslam_estimator/keyframe_point" />
        <param name="margin_cloud"    value="/sslam_estimator/margin_cloud" />
        <param name="extrinsic"       value="/sslam_estimator/extrinsic" />
    </node>

    <node pkg="ros_utils" type="pose_to_path" name="gps_path">
        <remap from="pose"                  to="/gps_pose" />
        <remap from="path"                  to="/gps/path" />
        <param name="map_frame"             value="world" />
        <param name="frame_id"              value="world" />
        <!--"is_camera_frame" set to false means z_up_x_fwd frame, true means z_fwd_x_right frame!-->
        <param name="is_camera_frame"       value="false" />
        <param name="base_frame"            value="gps" />
        <param name="init_origin"           value="true" />
        <param name="publish_transform"     value="false" />
    </node>

    <node name="rvizvisualisation" pkg="rviz" type="rviz" output="log" args="-d $(find sslam_estimator)/config/sslam_rviz_config.rviz" />
</launch>
